{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "versioning": "npm",
      "bumpVersion": "patch"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "github-actions": {
    "enabled": false
  }
}
